# Application
NODE_ENV=development
PORT=3000

# Worker Thread Pool Size
# Sets the number of threads used in Node.js's thread pool.
# Default is 4. Increase for I/O-heavy applications.
# UV_THREADPOOL_SIZE=4

# Database (PostgreSQL example for Drizzle)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=mydatabase

# Cache (Redis example)
CACHE_HOST=localhost
CACHE_PORT=6379

# Queue (RabbitMQ example)
QUEUE_URL=amqp://localhost

# Security
JWT_SECRET=a-very-strong-and-long-secret-key-for-jwt
